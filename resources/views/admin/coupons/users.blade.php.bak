    $('.open-coupon').click(function(e) {
        e.preventDefault();
        $.ajax({
            headers: {'X-CSRF-TOKEN': $('meta[name="csrf-token"]').attr('content')},
            url: $(this).attr('href'),
            method: 'POST',
            success: function(res){
                if(res){
                    $('#add-coupon-form').html(res);
                }
            }
        })
        
        $('#add-coupon').attr('data-url', $(this).attr('data-url')) ;
    });
    
    
    $('#add-coupon').click(function(e) {
        e.preventDefault();
        let coupons = [];
        
        $('.new-control-input').each(function() {
            if($(this).prop('checked')) {
                coupons.push($(this).attr('data-id'));   
            }
        })
        
        $.ajax({
            headers: {'X-CSRF-TOKEN': $('meta[name="csrf-token"]').attr('content')},
            url: $(this).attr('data-url'),
            method: 'POST',
            dataType: 'json',
            data: {coupons},
            success: function(res){
                if(res){
                    location.reload();
                }
            }
        })
    });
    
    
    
    

</script>
